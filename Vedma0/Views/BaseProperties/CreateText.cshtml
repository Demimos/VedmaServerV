@model Vedma0.Models.Properties.BaseTextProperty

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Console.cshtml";
}

<h2>Создание</h2>

<h4>Базовое текстовое свойство</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateText">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultValue" class="control-label"></label>
                <input asp-for="DefaultValue" class="form-control" />
                <span asp-validation-for="DefaultValue" class="text-danger"></span>
            </div>
            @if (Model == null)
            {
                <input type="hidden" asp-for="PresetId" value="@ViewData["PresetId"]" />
            }
            else
            {
                <input type="hidden" asp-for="PresetId" />
            }

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Visible" /> @Html.DisplayNameFor(model => model.Visible)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к пресету</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
