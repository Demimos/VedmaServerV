@model IEnumerable<Vedma0.Models.VedmaUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Console.cshtml";
}

<h2>Пользователи проекта</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Добавить пользователя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailSignal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PushToken)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailSignal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PushToken)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Сделать мастером</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Связать с персонажем</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Исключить</a>
            </td>
        </tr>
}
    </tbody>
</table>
